<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <!--    view binding 用-->
    <include
        android:id="@+id/i_main_content_card_situation"
        layout="@layout/main_content_card_situation"/>

    <!--  layout_behavior の定義により recyclerView を下にスクロールするとフローティングアクションボタンが消える。-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_card_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_vector_add_24dp"
        app:layout_behavior="com.example.ioenglish.utils.ScrollAwareFabBehavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>